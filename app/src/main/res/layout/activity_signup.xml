<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:background="@drawable/blur2"
    tools:context="com.example.islamiccenter.abjad1.SignupAct">

    <include
    layout="@layout/signup_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tb"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="48dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        app:layout_constraintHorizontal_bias="0.416" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tb">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="5dp"
        android:orientation="vertical">
    <RelativeLayout
        android:paddingHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createAccTxt"
            android:textSize="17dp"
            android:textColor="#FFF"
            android:fontFamily="casual"
            android:layout_centerHorizontal="true"
            android:text=" انشاء حساب باستخدام "/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FFF"
            android:layout_toLeftOf="@id/createAccTxt"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            />
        <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFF"
        android:layout_toRightOf="@id/createAccTxt"
        android:layout_centerVertical="true"
        android:layout_margin="3dp"
        />



    </RelativeLayout>
    <Button
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:fontFamily="monospace"
        android:textColor="#FFFF"
        android:textSize="20dp"
        android:id="@+id/buttonfacebook"
        android:textAllCaps="false"
        android:background="@drawable/fb_signup"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="#FFF"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:fontFamily="monospace"
        android:text="أو"/>
    <RelativeLayout
        android:paddingHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/infoAccTxt"
            android:textSize="17dp"
            android:textColor="#FFF"
            android:fontFamily="monospace"
            android:layout_centerHorizontal="true"
            android:text="     انشاء حساب     "/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FFF"
            android:layout_toLeftOf="@id/infoAccTxt"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"/>
        <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFF"
        android:layout_toRightOf="@id/infoAccTxt"
        android:layout_centerVertical="true"
        android:layout_margin="3dp"
        />

    </RelativeLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:hint="الاسم كامل"
        android:textSize="15dp"
        android:textColor="#FFF"
        android:inputType="text"
        android:layout_marginBottom="10dp"
        android:maxLines="1"
        android:id="@+id/editTextfullname"
        android:textColorHint="#FFF"
        android:drawablePadding="5dp"

        android:drawableRight="@drawable/user"
        android:backgroundTint="#fff"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="اسم المستخدم"
        android:textColor="#FFF"
        android:textSize="15dp"
        android:inputType="text"
        android:layout_marginBottom="10dp"
        android:maxLines="1"
        android:id="@+id/editTextusername"
        android:textColorHint="#FFF"
        android:drawablePadding="5dp"

        android:layout_marginHorizontal="5dp"
        android:drawableRight="@drawable/user"
        android:backgroundTint="#fff"/>

    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:hint="البريد الالكتروني"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        android:inputType="text"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        android:maxLines="1"
        android:layout_marginHorizontal="5dp"
        android:drawableRight="@drawable/email"
    android:backgroundTint="#fff"/>
    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:hint="كلمة المرور"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        android:id="@+id/editTextpass"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="viewEnd"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textSize="15dp"
        android:drawableRight="@drawable/lock"
    android:backgroundTint="#fff"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:drawablePadding="5dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/editTextconfirmedpass"
        android:hint="اعادة كلمة المرور"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        android:textAlignment="viewEnd"
        android:textSize="15dp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:drawableRight="@drawable/lock"
        android:layout_marginHorizontal="5dp" />

        <Button
            android:id="@+id/buttonsave"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="25dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/zero_button"
            android:fontFamily="monospace"
            android:text="تسجيل"
            android:textColor="#FFFF"
            android:textSize="20dp"
            android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="انشاء حساب يعني موافقتك علي"
        android:fontFamily="monospace"
        android:textColor="#FFFF"
        android:textSize="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="الشروط و الاحكام"
        android:fontFamily="monospace"
        android:textColor="#FFFF"
        android:textSize="10dp"
        android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
    </ScrollView>

</RelativeLayout>
