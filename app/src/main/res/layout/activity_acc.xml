<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context="com.example.islamiccenter.abjad1.Account">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_top"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <include
            layout="@layout/account_toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tb"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="48dp"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            app:layout_constraintHorizontal_bias="0.416" />



        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/pic"
            android:src="#000"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:id="@+id/line1"
            android:text="يمكنك تعديل ملفك الشخصي"
            android:layout_below="@id/pic"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"
            android:id="@+id/line2"
            android:text="إذا أردت ذلك"
            android:layout_below="@id/line1"
            android:layout_centerHorizontal="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/line2"
            android:background="@drawable/blue_button"
            android:text="إعدادات الحساب"
            android:id="@+id/settingBtn"
            android:textSize="20dp"
            android:paddingLeft="25dp"
            android:textColor="#2980b9"
            android:paddingRight="25dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:id="@+id/descTxt"
            android:layout_above="@id/pic"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:text="Acc Description"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:id="@+id/acc_name"
            android:layout_above="@id/descTxt"
            android:layout_centerHorizontal="true"
            android:textSize="35dp"
            android:text="Acc Name"/>

    </RelativeLayout>


</RelativeLayout>
